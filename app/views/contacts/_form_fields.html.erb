
<%= form.hidden_field :lock_version, :value => contact.lock_version %>
<fieldset class="field-section field-section--two-cols">
  <div class="field">
    <%= form.label :first_name, class: "field__label" %>
    <%= form.text_field :first_name, id: "contact_first_name" %>
  </div>
  <div class="field">
    <%= form.label :middle_names, class: "field__label" %>
    <%= form.text_field :middle_names %>
  </div>
  <div class="field">
    <%= form.label :surname, class: "field__label" %>
    <%= form.text_field :surname %>
  </div>
  <div class="field">
    <%= form.label :date_of_birth, class: "field__label" %>
    <%= form.text_field :date_of_birth, placeholder: 'Eg: 01/11/1943'%>
  </div>
  <div class="field">
    <%= form.label :nhs_number, 'NHS Number', class: "field__label" %>
    <%= form.text_field :nhs_number %>
  </div>
  <div class="field">
    <%= form.label :test_and_trace_account_id, 'Test & Trace Id', class: "field__label" %>
    <%= form.text_field :test_and_trace_account_id %>
  </div>
  <div class="field">
    <%= form.label :test_trace_creation_date, 'Test & Trace Creation Date', class: "field__label" %>
    <%= form.text_field :test_trace_creation_date, placeholder: 'Eg: 17/12/2020' %>
  </div>
  <div class="field">
    <%= form.label :isolation_start_date, 'Isolation Start Date', class: "field__label" %>
    <%= form.text_field :isolation_start_date, placeholder: 'Eg: 17/12/2020' %>
  </div>
</fieldset>

<fieldset class="field-section field-section--two-cols">
  <legend><h2 class="field-section__title">Where do they live?</h2></legend>

  <div class="field field--span-two-cols">
    <%= form.label :address, class: "field__label" %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :postcode, class: "field__label" %>
    <%= form.text_field :postcode %>
  </div>
</fieldset>

<%= render partial: '/contacts/extra_questions', locals: { contact: contact, form: form } %>

<fieldset class="field-section">
  <legend><h2 class="field-section__title">How can we reach them?</h2></legend>

  <div class="field-section--two-cols">
      <div class="flex">
          <div class="field">
              <%= form.label :email, class: "field__label" %>
              <%= form.text_field :email %>
          </div>

          <div class="field">
              <%= form.label :telephone, "Landline", class: "field__label" %>
              <%= form.text_field :telephone %>
          </div>
      </div>
      <div class="field">
          <%= form.label :mobile, class: "field__label" %>
          <%= form.text_field :mobile %>
      </div>
  </div>
</fieldset>



<fieldset class="field-section">
  <legend><h2 class="field-section__title">What should we know about them?</h2></legend>

  <div class="field field--span-two-cols">
    <%= form.label :additional_info, class: "field__label" %>
    <%= form.text_area :additional_info %>
  </div>
</fieldset>

<fieldset class="field-section">
    <legend>
        <h2 class="field-section__title">Is this person Shielded?</h2>

  <details class="field-section__hint details field-section__title">
    <summary class="details__summary">What does shielded mean?</summary>
    <p>Someone is shielded if they are:</p>
    <ul>
      <li>Over 70 years old</li>
      <li>Under 70 years old and has an underlying health condition (i.e. normally asked by the NHS to get a flu jab)</li>
      <li>Pregnant</li>
    </ul>
  </details>

    </legend>

  <div class="field-section--two-cols">
      <div class="radio">
          <%= form.radio_button :is_vulnerable, true, :id => "is_vulnerable_true" %>
          <label for="is_vulnerable_true" class="radio__label">Yes</label>
      </div>
      <div class="radio">
          <%= form.radio_button :is_vulnerable, false, :id => "is_vulnerable_false" %>
          <label for="is_vulnerable_false" class="radio__label">No</label>
      </div>
  </div>

</fieldset>

<fieldset class="field-section">
  <legend><h2 class="field-section__title">Consents</h2></legend>

      <div class="checkbox">
          <%= form.check_box :no_calls_flag, class: 'checkbox__input' %>
          <%= form.label :no_calls_flag, 'Do not call', class: 'checkbox__label' %>
      </div>
      <div class="checkbox">
          <%= form.check_box :deceased_flag, class: 'checkbox__input' %>
          <%= form.label :deceased_flag, 'Deceased', class: 'checkbox__label' %>
      </div>
      <div class="checkbox">
          <%= form.check_box :share_data_flag, class: 'checkbox__input' %>
          <%= form.label :share_data_flag, 'Consent to share (NB most sharing not need consent)', class: 'checkbox__label' %>
      </div>
</fieldset>
<fieldset class="field-section field-section--two-cols">
  <div class="field">
    <%= form.label :channel, class: "field__label" %>
    <%= form.text_field :channel, placeholder: "Eg: phone, email, social media" %>
  </div>
</fieldset>

<%= render partial: '/contacts/extra_question_household', locals: { contact: contact, form: form } %>
